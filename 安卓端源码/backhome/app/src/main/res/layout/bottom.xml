<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_page_bg">

    <LinearLayout
        android:id="@+id/tab_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">





        <RelativeLayout
            android:id="@+id/id_tab_teams_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/id_tab_teams"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/comui_tab_person" />

            <TextView
                android:id="@+id/mine_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tab_teams"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="我的队伍"
                android:textColor="@color/comui_tab"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_tab_home_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/id_tab_home"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/comui_tab_home" />

            <TextView
                android:id="@+id/home_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tab_home"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="首页"
                android:textColor="@color/comui_tab"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_tab_message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/id_tab_message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/comui_tab_message" />

            <TextView
                android:id="@+id/message_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tab_message"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="公告"
                android:textColor="@color/comui_tab"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/id_tab_me_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/id_tab_me"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/my_img" />

            <TextView
                android:id="@+id/me_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tab_me"
                android:layout_centerHorizontal="true"

                android:text="我的信息"
                android:textColor="@color/comui_tab"
                android:textSize="13sp" />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>