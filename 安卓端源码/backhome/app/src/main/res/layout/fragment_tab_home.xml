<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.stx.xhb.xbanner.XBanner
        android:layout_width="match_parent"
        android:id="@+id/mybanner"
        app:canLoop="true"
        app:isAutoPlay="true"
        android:layout_margin="10dp"
        app:AutoPlayTime="5000"
        app:pointsContainerBackground="#44BE54F7"
        android:background="@drawable/bannershape"
        android:layout_height="150dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#d7d7d7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:text="正在进行的任务"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bannershape"
            android:gravity="right|bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/now_mission_title_tv"
                    android:text="寻找老人李时珍"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_man_photo"
                    android:paddingBottom="10dp"
                    android:src="@drawable/two" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:background="@drawable/btn_radius_bg_shape"
                    android:layout_margin="10dp"
                    android:id="@+id/action_all_info_btn"
                    android:text="任务详细信息"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:background="@drawable/btn_radius_bg_shape"
                    android:layout_margin="10dp"
                    android:id="@+id/tomap_btn"
                    android:text="进入任务"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#d7d7d7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="19sp"
            android:text="待接的任务"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:id="@+id/wait_rect_tasks_lv"
            />

    </LinearLayout>


</LinearLayout>